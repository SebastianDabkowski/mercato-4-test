{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=SDProjectNameDB;Trusted_Connection=True;MultipleActiveResultSets=true",
    "SqliteConnection": "Data Source=./SDProjectName.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Payments": {
    "EnabledMethods": [ "Przelewy24", "Card", "BankTransfer", "BLIK" ]
  },
  "ShippingProviders": {
    "Providers": [
      {
        "Code": "InPost",
        "DisplayName": "InPost",
        "Carrier": "InPost",
        "TrackingUrlTemplate": "https://inpost.pl/tracking/{trackingNumber}",
        "WebhookSecret": "inpost-secret",
        "Enabled": true,
        "Services": [
          { "Code": "locker", "Name": "InPost Locker", "DefaultPrice": 12.99, "DefaultDeliveryEstimate": "1-3 business days" },
          { "Code": "courier", "Name": "InPost Courier", "DefaultPrice": 19.99, "DefaultDeliveryEstimate": "1-2 business days" }
        ]
      },
      {
        "Code": "DHL",
        "DisplayName": "DHL",
        "Carrier": "DHL",
        "TrackingUrlTemplate": "https://www.dhl.com/track?tracking-number={trackingNumber}",
        "WebhookSecret": "dhl-secret",
        "Enabled": true,
        "Services": [
          { "Code": "parcel", "Name": "DHL Parcel", "DefaultPrice": 22.5, "DefaultDeliveryEstimate": "2-4 business days" }
        ]
      }
    ]
  },
  "Escrow": {
    "CommissionRate": 0.01,
    "PayoutEligibilityDelayDays": 7
  },
  "PayoutSchedule": {
    "MinimumPayoutAmount": 50,
    "ScheduleIntervalDays": 7
  },
  "Commission": {
    "DefaultRate": 0.01,
    "SellerOverrides": {},
    "CategoryOverrides": {}
  },
  "CommissionInvoice": {
    "NumberPrefix": "CI",
    "DefaultTaxRate": 0.23,
    "SellerTaxOverrides": {},
    "Currency": "PLN"
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "AllowedHosts": "*",
  "Features": {
    "EnableSellerInternalUsers": false,
    "EnableProductVariants": false
  }
}
