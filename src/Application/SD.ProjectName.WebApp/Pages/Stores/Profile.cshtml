@page "/store/{storeSlug}"
@model SD.ProjectName.WebApp.Pages.Stores.ProfileModel
@{
    ViewData["Title"] = $"{Model.StoreName} - Store";
}

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrWhiteSpace(Model.LogoUrl))
        {
            <img src="@Model.LogoUrl" alt="@Model.StoreName logo" class="img-fluid rounded mb-3" data-testid="public-store-logo" />
        }
        else
        {
            <div class="border rounded bg-light text-center p-4 mb-3" data-testid="public-store-logo-placeholder">
                <span class="text-muted">No logo provided</span>
            </div>
        }
    </div>
    <div class="col-md-8">
        <h1 class="mb-2" data-testid="public-store-name">@Model.StoreName</h1>
        <p class="text-muted" data-testid="public-store-description">
            @(!string.IsNullOrWhiteSpace(Model.StoreDescription) ? Model.StoreDescription : "This seller has not added a description yet.")
        </p>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Contact</h5>
                <dl class="row mb-0">
                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">
                        <a href="mailto:@Model.ContactEmail" data-testid="public-store-email">@Model.ContactEmail</a>
                    </dd>
                    @if (!string.IsNullOrWhiteSpace(Model.ContactPhone))
                    {
                        <dt class="col-sm-3">Phone</dt>
                        <dd class="col-sm-9" data-testid="public-store-phone">
                            <a href="tel:@Model.ContactPhone">@Model.ContactPhone</a>
                        </dd>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.WebsiteUrl))
                    {
                        <dt class="col-sm-3">Website</dt>
                        <dd class="col-sm-9" data-testid="public-store-website">
                            <a href="@Model.WebsiteUrl" target="_blank" rel="noopener">@Model.WebsiteUrl</a>
                        </dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <h2 class="h4 mb-3">Products</h2>
    @if (Model.ProductPreviews.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-3" data-testid="public-store-products">
            @foreach (var item in Model.ProductPreviews)
            {
                var product = item.Product;
                <div class="col">
                    <div class="card h-100">
                        @if (!string.IsNullOrWhiteSpace(item.ThumbnailUrl))
                        {
                            <img src="@item.ThumbnailUrl" alt="@product.Name thumbnail" class="card-img-top" style="max-height: 160px; object-fit: cover;" data-testid="public-store-product-image" />
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title" data-testid="public-store-product-name">@product.Name</h5>
                            <p class="card-text text-muted flex-grow-1">@product.Description</p>
                            <div class="fw-semibold" data-testid="public-store-product-price">@product.Price.ToString("C")</div>
                            <a class="btn btn-sm btn-outline-primary mt-2" href="/products/@product.Id" data-testid="public-store-product-link">View details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="btn btn-outline-primary mt-3" href="/Products/List" data-testid="public-store-products-link">View all products</a>
    }
    else
    {
        <p class="text-muted" data-testid="public-store-no-products">This store has not listed any products yet.</p>
    }
</div>
