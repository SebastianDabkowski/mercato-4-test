@page "/admin/orders/{orderId:int}"
@model SD.ProjectName.WebApp.Pages.Admin.Orders.DetailsModel
@using SD.ProjectName.Modules.Cart.Domain
@{
    ViewData["Title"] = "Order details";
    var order = Model.Order;
}

<h1 class="mb-3">Order #@order?.Id</h1>

@if (order is null)
{
    <div class="alert alert-danger">Order not found.</div>
}
else
{
    <div class="card mb-3">
        <div class="card-body d-flex flex-wrap gap-3">
            <div><strong>Status:</strong> @OrderStatusFlow.NormalizeStatus(order.Status)</div>
            <div><strong>Buyer:</strong> @order.BuyerId</div>
            <div><strong>Placed:</strong> @order.CreatedAt.ToLocalTime().ToString("g")</div>
            <div><strong>Total:</strong> @order.TotalAmount.ToString("C")</div>
        </div>
    </div>

    @foreach (var sub in order.SubOrders)
    {
        var history = sub.ShippingHistory
            .OrderBy(h => h.ChangedAt)
            .ToList();
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                <span>Seller: @(string.IsNullOrWhiteSpace(sub.SellerName) ? sub.SellerId : sub.SellerName)</span>
                <span class="badge bg-secondary text-uppercase">@OrderStatusFlow.NormalizeStatus(sub.Status)</span>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div><strong>Shipping:</strong> @(sub.ShippingSelection?.ShippingMethod ?? "Not selected")</div>
                    <div><strong>Tracking:</strong> @(sub.TrackingNumber ?? "Not provided")</div>
                </div>
                <div class="fw-semibold mb-2">Shipping status history</div>
                @if (history.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Actor</th>
                                    <th>Tracking</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var entry in history)
                                {
                                    <tr>
                                        <td>@entry.ChangedAt.ToLocalTime().ToString("g")</td>
                                        <td class="text-uppercase">@OrderStatusFlow.NormalizeStatus(entry.Status)</td>
                                        <td>
                                            @(string.IsNullOrWhiteSpace(entry.ChangedByRole) ? "Unknown" : entry.ChangedByRole)
                                            @if (!string.IsNullOrWhiteSpace(entry.ChangedBy))
                                            {
                                                <span class="text-muted small ms-1">(@entry.ChangedBy)</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(entry.TrackingNumber))
                                            {
                                                <div>@entry.TrackingNumber</div>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(entry.TrackingCarrier))
                                            {
                                                <div class="text-muted small">@entry.TrackingCarrier</div>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(entry.TrackingUrl))
                                            {
                                                <div><a href="@entry.TrackingUrl" target="_blank" rel="noopener noreferrer">Open</a></div>
                                            }
                                        </td>
                                        <td>@(string.IsNullOrWhiteSpace(entry.Notes) ? "-" : entry.Notes)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-muted">No shipping updates yet.</div>
                }
            </div>
        </div>
    }
}
