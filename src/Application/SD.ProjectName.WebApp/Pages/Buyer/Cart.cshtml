@page "/buyer/cart"
@model SD.ProjectName.WebApp.Pages.Buyer.CartModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<h1 data-testid="cart-heading">Shopping Cart</h1>

@if (!Model.SellerGroups.Any())
{
    <div class="alert alert-info" data-testid="cart-empty">
        <p class="mb-1">Your cart is empty.</p>
        <a asp-page="/Products/List" class="btn btn-outline-primary mt-2">Browse products</a>
    </div>
}
else
{
    @foreach (var group in Model.SellerGroups)
    {
        <div class="card mb-3" data-testid="seller-group">
            <div class="card-header" data-testid="seller-name">
                Seller: @(string.IsNullOrWhiteSpace(group.SellerName) ? group.SellerId : group.SellerName)
            </div>
            <div class="card-body p-0">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Unit Price</th>
                            <th>Quantity</th>
                            <th>Subtotal</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in group.Items)
                        {
                            <tr data-testid="cart-item">
                                <td data-testid="cart-item-name">@item.ProductName</td>
                                <td data-testid="cart-item-price">@item.UnitPrice.ToString("C")</td>
                                <td>
                                    @{
                                        var availableStock = Model.GetAvailableStock(item.Id);
                                        var displayQuantity = Model.GetDisplayQuantity(item.Id, item.Quantity);
                                    }
                                    <form method="post" asp-page-handler="UpdateQuantity" class="d-inline">
                                        <input type="hidden" name="itemId" value="@item.Id" />
                                        <input type="number" name="quantity" value="@displayQuantity" min="0" @(availableStock > 0 ? $"max=\"{availableStock}\"" : "") class="form-control form-control-sm d-inline-block" style="width: 80px;" data-testid="cart-item-quantity" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary" data-testid="cart-item-update">Update</button>
                                    </form>
                                    @if (availableStock == 0)
                                    {
                                        <div class="text-danger small" data-testid="cart-item-stock-warning">Out of stock. Set quantity to 0 or remove this item.</div>
                                    }
                                    else if (displayQuantity < item.Quantity)
                                    {
                                        <div class="text-warning small" data-testid="cart-item-stock-warning">Only @availableStock available. Quantity adjusted.</div>
                                    }
                                </td>
                                <td data-testid="cart-item-subtotal">@((item.UnitPrice * displayQuantity).ToString("C"))</td>
                                <td>
                                    <form method="post" asp-page-handler="Remove" class="d-inline">
                                        <input type="hidden" name="itemId" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" data-testid="cart-item-remove">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="card mb-3" data-testid="promo-section">
        <div class="card-header">Promo code</div>
        <div class="card-body">
            @if (!string.IsNullOrWhiteSpace(Model.PromoError))
            {
                <div class="alert alert-danger py-2" data-testid="promo-error">@Model.PromoError</div>
            }
            @if (!string.IsNullOrWhiteSpace(Model.PromoSuccess))
            {
                <div class="alert alert-success py-2" data-testid="promo-success">@Model.PromoSuccess</div>
            }

            @if (!string.IsNullOrWhiteSpace(Model.Totals.PromoCode))
            {
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-semibold" data-testid="applied-promo">Code: @Model.Totals.PromoCode</div>
                        <div class="text-muted small mb-0">Promo discount is applied to your cart.</div>
                    </div>
                    <form method="post" asp-page-handler="ClearPromo" class="ms-3">
                        <button type="submit" class="btn btn-outline-secondary btn-sm" data-testid="promo-remove">Remove</button>
                    </form>
                </div>
            }
            else
            {
                <form method="post" asp-page-handler="ApplyPromo" class="d-flex gap-2 align-items-start">
                    <input type="text" name="promoCode" class="form-control" placeholder="Enter promo code" data-testid="promo-code-input" />
                    <button type="submit" class="btn btn-outline-primary" data-testid="promo-apply">Apply</button>
                </form>
            }
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header">Order summary</div>
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <span>Items subtotal</span>
                <span>@Model.Totals.ItemsSubtotal.ToString("C")</span>
            </div>
            @if (Model.Totals.DiscountTotal > 0)
            {
                <div class="d-flex justify-content-between text-success">
                    <span>Promo @(!string.IsNullOrWhiteSpace(Model.Totals.PromoCode) ? $"({Model.Totals.PromoCode})" : string.Empty)</span>
                    <span data-testid="promo-discount">-@Model.Totals.DiscountTotal.ToString("C")</span>
                </div>
            }
            <div class="d-flex justify-content-between fw-bold mt-2">
                <span>Total</span>
                <span data-testid="cart-total">@Model.Totals.TotalAmount.ToString("C")</span>
            </div>
            <div class="text-muted small">Shipping will be calculated at checkout.</div>
        </div>
    </div>

    <div class="text-end mt-3">
        <a class="btn btn-primary" asp-page="/Buyer/Checkout/Address" data-testid="proceed-checkout">Proceed to checkout</a>
    </div>
}
