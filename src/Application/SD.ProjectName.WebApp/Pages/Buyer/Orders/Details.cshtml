@page "/buyer/orders/{orderId:int}"
@model SD.ProjectName.WebApp.Pages.Buyer.Orders.DetailsModel
@using System
@using SD.ProjectName.Modules.Cart.Application
@using SD.ProjectName.Modules.Cart.Domain
@{
    ViewData["Title"] = "Order confirmation";
    var order = Model.Order!;
}

<h1 class="mb-3 d-flex align-items-center gap-3" data-testid="order-confirmation">
    <span>Order #@order.Id</span>
    <span class="badge bg-secondary text-uppercase">@Model.OverallStatus</span>
</h1>

@if (TempData["OrderSuccess"] is string orderSuccess)
{
    <div class="alert alert-success">@orderSuccess</div>
}
@if (TempData["OrderError"] is string orderError)
{
    <div class="alert alert-danger">@orderError</div>
}
@if (Model.IsPaymentFailed)
{
    <div class="alert alert-warning">Payment failed. Please try the payment again or contact support if this persists.</div>
}

<div class="row">
    <div class="col-lg-8">
        @if (order.SubOrders.Any())
        {
            <div class="alert alert-info">Each seller may ship separately, so statuses and delivery dates can differ.</div>
            @foreach (var sub in order.SubOrders)
            {
                Model.ReturnInfo.TryGetValue(sub.Id, out var returnInfo);
                returnInfo ??= new SD.ProjectName.WebApp.Pages.Buyer.Orders.DetailsModel.ReturnRequestInfo(ReturnEligibility.NotAllowed("Return request is not available."), null);
                var itemStatuses = sub.Items.Select(i => OrderStatusFlow.NormalizeStatus(i.Status)).ToList();
                var isPartiallyShipped = itemStatuses.Any(s =>
                        string.Equals(s, OrderStatus.Shipped, StringComparison.OrdinalIgnoreCase) ||
                        string.Equals(s, OrderStatus.Delivered, StringComparison.OrdinalIgnoreCase)) &&
                    itemStatuses.Any(s =>
                        string.Equals(s, OrderStatus.Preparing, StringComparison.OrdinalIgnoreCase) ||
                        string.Equals(s, OrderStatus.New, StringComparison.OrdinalIgnoreCase) ||
                        string.Equals(s, OrderStatus.Paid, StringComparison.OrdinalIgnoreCase));
                <div class="card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                        <span>Seller: @(string.IsNullOrWhiteSpace(sub.SellerName) ? sub.SellerId : sub.SellerName)</span>
                        <span class="badge bg-secondary text-uppercase">@OrderStatusFlow.NormalizeStatus(sub.Status)</span>
                        @if (isPartiallyShipped)
                        {
                            <span class="badge bg-info text-dark text-uppercase">Partially shipped</span>
                        }
                    </div>
                    <div class="card-body">
                        @if (string.Equals(sub.Status, OrderStatus.Delivered, StringComparison.OrdinalIgnoreCase))
                        {
                            <div class="alert alert-success small mb-3">
                                Delivered@(sub.DeliveredAt.HasValue ? $" on {sub.DeliveredAt.Value.ToLocalTime().ToString("g")}" : string.Empty).
                            </div>
                        }
                        @if (string.Equals(sub.Status, OrderStatus.Cancelled, StringComparison.OrdinalIgnoreCase))
                        {
                            <div class="text-warning small mb-2">This sub-order was cancelled; items below will not be shipped (value: @sub.TotalAmount.ToString("C")).</div>
                        }
                        @if (sub.RefundedAmount > 0)
                        {
                            <div class="text-success small mb-2">Refunded amount for this sub-order: @sub.RefundedAmount.ToString("C").</div>
                        }
                        <p class="mb-2">
                            <strong>Shipping:</strong>
                            @(sub.ShippingSelection?.ShippingMethod ?? "Not selected")
                            (<span class="text-muted">@sub.ShippingTotal.ToString("C")</span>)
                            @if (!string.IsNullOrWhiteSpace(sub.TrackingNumber))
                            {
                                var trackingLabel = $"Tracking: {sub.TrackingNumber}";
                                var trackingUrl = !string.IsNullOrWhiteSpace(sub.TrackingUrl)
                                    ? sub.TrackingUrl
                                    : (Uri.TryCreate(sub.TrackingNumber, UriKind.Absolute, out var trackingUri) ? trackingUri.ToString() : null);
                                if (!string.IsNullOrWhiteSpace(trackingUrl))
                                {
                                    <a class="badge bg-light text-dark ms-2" href="@trackingUrl" target="_blank" rel="noopener noreferrer">@trackingLabel</a>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark ms-2" data-testid="tracking-number">@trackingLabel</span>
                                }
                                if (!string.IsNullOrWhiteSpace(sub.TrackingCarrier))
                                {
                                    <span class="badge bg-light text-dark ms-2">Carrier: @sub.TrackingCarrier</span>
                                }
                                if (string.IsNullOrWhiteSpace(trackingUrl))
                                {
                                    <span class="text-muted small ms-2">Track on the carrier site with this number.</span>
                                }
                            }
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-start">Status</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Price</th>
                                        <th class="text-end">Line total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in sub.Items)
                                    {
                                        var normalizedStatus = OrderStatusFlow.NormalizeStatus(item.Status);
                                        var badgeClass = normalizedStatus.ToLowerInvariant() switch
                                        {
                                            "shipped" => "bg-info text-dark",
                                            "delivered" => "bg-success",
                                            "cancelled" => "bg-warning text-dark",
                                            _ => "bg-secondary"
                                        };
                                        <tr>
                                            <td>@item.ProductName</td>
                                            <td><span class="badge @badgeClass text-uppercase">@normalizedStatus</span></td>
                                            <td class="text-end">@item.Quantity</td>
                                            <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                            <td class="text-end">@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-end mt-3">
                            <div style="min-width: 220px;">
                                <div class="d-flex justify-content-between">
                                    <span>Items subtotal</span>
                                    <span>@sub.ItemsSubtotal.ToString("C")</span>
                                </div>
                                @if (sub.DiscountTotal > 0)
                                {
                                    <div class="d-flex justify-content-between text-success">
                                        <span>Discount</span>
                                        <span>-@sub.DiscountTotal.ToString("C")</span>
                                    </div>
                                }
                                <div class="d-flex justify-content-between">
                                    <span>Shipping</span>
                                    <span>@sub.ShippingTotal.ToString("C")</span>
                                </div>
                                @if (sub.RefundedAmount > 0)
                                {
                                    <div class="d-flex justify-content-between text-success">
                                        <span>Refunded amount</span>
                                        <span>@sub.RefundedAmount.ToString("C")</span>
                                    </div>
                                }
                                <div class="d-flex justify-content-between fw-bold mt-2">
                                    <span>Sub-order total</span>
                                    <span>@sub.TotalAmount.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                        @if (sub.Status == OrderStatus.Shipped)
                        {
                            <form method="post" asp-page-handler="MarkDelivered" class="mt-3">
                                <input type="hidden" name="orderId" value="@order.Id" />
                                <input type="hidden" name="subOrderId" value="@sub.Id" />
                                <button type="submit" class="btn btn-outline-success btn-sm">Confirm delivery</button>
                            </form>
                        }
                        @if (returnInfo.LatestRequest is not null)
                        {
                            <div class="alert alert-warning mt-3" data-testid="return-status">
                                <div class="fw-semibold text-uppercase">Return @returnInfo.LatestRequest.Status</div>
                                <div class="small text-muted">Submitted @returnInfo.LatestRequest.RequestedAt.ToLocalTime().ToString("g")</div>
                                <div class="mb-0">@returnInfo.LatestRequest.Reason</div>
                            </div>
                        }
                        else if (returnInfo.Eligibility.IsAllowed)
                        {
                            var returnableItems = sub.Items
                                .Where(i => !string.Equals(OrderStatusFlow.NormalizeStatus(i.Status), OrderStatus.Cancelled, StringComparison.OrdinalIgnoreCase))
                                .ToList();
                            <div class="mt-3 border rounded p-3 bg-light">
                                <div class="fw-semibold mb-2">Request a return</div>
                                <form method="post" asp-page-handler="RequestReturn">
                                    <input type="hidden" name="orderId" value="@order.Id" />
                                    <input type="hidden" name="subOrderId" value="@sub.Id" />
                                    <div class="mb-3">
                                        <div class="text-muted small mb-2">Select items to return. Leave all selected to return the full sub-order.</div>
                                        @if (returnableItems.Any())
                                        {
                                            @foreach (var item in returnableItems)
                                            {
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="itemIds" value="@item.Id" id="return-item-@item.Id-@sub.Id" checked />
                                                    <label class="form-check-label" for="return-item-@item.Id-@sub.Id">
                                                        @item.ProductName (@item.Quantity x @item.UnitPrice.ToString("C"))
                                                    </label>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="text-muted small">No items available for return.</div>
                                        }
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="reason-@sub.Id">Reason</label>
                                        <textarea id="reason-@sub.Id" name="reason" class="form-control" rows="3" required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-outline-primary btn-sm">Submit return request</button>
                                    @if (returnInfo.Eligibility.Deadline.HasValue)
                                    {
                                        <div class="text-muted small mt-2">Return window ends @returnInfo.Eligibility.Deadline.Value.ToLocalTime().ToString("D").</div>
                                    }
                                </form>
                            </div>
                        }
                        else if (!string.IsNullOrWhiteSpace(returnInfo.Eligibility.Message))
                        {
                            <div class="text-muted small mt-3">@returnInfo.Eligibility.Message</div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
                <div class="card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Items ordered</span>
                        <span class="badge bg-secondary text-uppercase">@Model.OverallStatus</span>
                    </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Seller</th>
                                    <th class="text-end">Quantity</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-end">Line total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in order.Items)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.SellerName</td>
                                        <td class="text-end">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                        <td class="text-end">@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <div class="card mb-3">
            <div class="card-header">Shipping</div>
            <div class="card-body">
                @if (order.ShippingSelections.Any())
                {
                    <ul class="list-unstyled mb-3">
                        @foreach (var selection in order.ShippingSelections)
                        {
                            <li>
                                <strong>@selection.SellerName</strong> &mdash; @selection.ShippingMethod
                                (<span class="text-muted">@selection.Cost.ToString("C")</span>)
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="mb-3 text-muted">Shipping method not available.</p>
                }

                <p class="mb-0"><strong>Estimated delivery:</strong> @Model.EstimatedDeliveryText</p>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card mb-3">
            <div class="card-header">Order summary</div>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <span>Placed</span>
                    <span>@order.CreatedAt.ToLocalTime().ToString("f")</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Payment status</span>
                    <span class="text-capitalize">@Model.PaymentStatusText</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Payment</span>
                    <span>@order.PaymentMethod</span>
                </div>
                <div class="d-flex justify-content-between mt-2">
                    <span>Items subtotal</span>
                    <span>@order.ItemsSubtotal.ToString("C")</span>
                </div>
                @if (order.DiscountTotal > 0)
                {
                    <div class="d-flex justify-content-between text-success">
                        <span>Promo @(!string.IsNullOrWhiteSpace(order.PromoCode) ? $"({order.PromoCode})" : string.Empty)</span>
                        <span data-testid="promo-discount">-@order.DiscountTotal.ToString("C")</span>
                    </div>
                }
                <div class="d-flex justify-content-between">
                    <span>Shipping</span>
                    <span>@order.ShippingTotal.ToString("C")</span>
                </div>
                @if (order.RefundedAmount > 0)
                {
                    <div class="d-flex justify-content-between text-success">
                        <span>Refunded amount</span>
                        <span>@order.RefundedAmount.ToString("C")</span>
                    </div>
                }
                <div class="d-flex justify-content-between fw-bold mt-2">
                    <span>Total</span>
                    <span>@order.TotalAmount.ToString("C")</span>
                </div>
            </div>
            @if (Model.CanCancel)
            {
                <div class="card-footer bg-transparent">
                    <form method="post" asp-page-handler="Cancel">
                        <input type="hidden" name="orderId" value="@order.Id" />
                        <button type="submit" class="btn btn-outline-danger w-100">Cancel order</button>
                    </form>
                </div>
            }
        </div>

        <div class="card">
            <div class="card-header">Delivery address</div>
            <div class="card-body">
                <div>@order.DeliveryRecipientName</div>
                <div>@order.DeliveryLine1</div>
                @if (!string.IsNullOrWhiteSpace(order.DeliveryLine2))
                {
                    <div>@order.DeliveryLine2</div>
                }
                <div>@order.DeliveryPostalCode @order.DeliveryCity</div>
                <div>@order.DeliveryRegion, @order.DeliveryCountryCode</div>
                @if (!string.IsNullOrWhiteSpace(order.DeliveryPhoneNumber))
                {
                    <div class="mt-2">Phone: @order.DeliveryPhoneNumber</div>
                }
            </div>
        </div>
    </div>
</div>
