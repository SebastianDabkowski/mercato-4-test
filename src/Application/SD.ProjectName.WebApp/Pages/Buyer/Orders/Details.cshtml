@page "/buyer/orders/{orderId:int}"
@model SD.ProjectName.WebApp.Pages.Buyer.Orders.DetailsModel
@using SD.ProjectName.Modules.Cart.Domain
@{
    ViewData["Title"] = "Order confirmation";
    var order = Model.Order!;
}

<h1 class="mb-3 d-flex align-items-center gap-3" data-testid="order-confirmation">
    <span>Order #@order.Id</span>
    <span class="badge bg-secondary text-uppercase">@Model.OverallStatus</span>
</h1>

@if (TempData["OrderSuccess"] is string orderSuccess)
{
    <div class="alert alert-success">@orderSuccess</div>
}
@if (TempData["OrderError"] is string orderError)
{
    <div class="alert alert-danger">@orderError</div>
}

<div class="row">
    <div class="col-lg-8">
        @if (order.SubOrders.Any())
        {
            foreach (var sub in order.SubOrders)
            {
                <div class="card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Seller: @(string.IsNullOrWhiteSpace(sub.SellerName) ? sub.SellerId : sub.SellerName)</span>
                        <span class="badge bg-secondary text-uppercase">@OrderStatusFlow.NormalizeStatus(sub.Status)</span>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">
                            <strong>Shipping:</strong>
                            @(sub.ShippingSelection?.ShippingMethod ?? "Not selected")
                            (<span class="text-muted">@sub.ShippingTotal.ToString("C")</span>)
                            @if (!string.IsNullOrWhiteSpace(sub.TrackingNumber))
                            {
                                <span class="badge bg-light text-dark ms-2">Tracking: @sub.TrackingNumber</span>
                            }
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Price</th>
                                        <th class="text-end">Line total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in sub.Items)
                                    {
                                        <tr>
                                            <td>@item.ProductName</td>
                                            <td class="text-end">@item.Quantity</td>
                                            <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                            <td class="text-end">@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-end mt-3">
                            <div style="min-width: 220px;">
                                <div class="d-flex justify-content-between">
                                    <span>Items subtotal</span>
                                    <span>@sub.ItemsSubtotal.ToString("C")</span>
                                </div>
                                @if (sub.DiscountTotal > 0)
                                {
                                    <div class="d-flex justify-content-between text-success">
                                        <span>Discount</span>
                                        <span>-@sub.DiscountTotal.ToString("C")</span>
                                    </div>
                                }
                                <div class="d-flex justify-content-between">
                                    <span>Shipping</span>
                                    <span>@sub.ShippingTotal.ToString("C")</span>
                                </div>
                                @if (sub.RefundedAmount > 0)
                                {
                                    <div class="d-flex justify-content-between text-success">
                                        <span>Refunded</span>
                                        <span>@sub.RefundedAmount.ToString("C")</span>
                                    </div>
                                }
                                <div class="d-flex justify-content-between fw-bold mt-2">
                                    <span>Sub-order total</span>
                                    <span>@sub.TotalAmount.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                        @if (sub.Status == OrderStatus.Shipped)
                        {
                            <form method="post" asp-page-handler="MarkDelivered" class="mt-3">
                                <input type="hidden" name="orderId" value="@order.Id" />
                                <input type="hidden" name="subOrderId" value="@sub.Id" />
                                <button type="submit" class="btn btn-outline-success btn-sm">Confirm delivery</button>
                            </form>
                        }
                    </div>
                </div>
            }
        }
        else
        {
                <div class="card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Items ordered</span>
                        <span class="badge bg-secondary text-uppercase">@Model.OverallStatus</span>
                    </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Seller</th>
                                    <th class="text-end">Quantity</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-end">Line total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in order.Items)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.SellerName</td>
                                        <td class="text-end">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                        <td class="text-end">@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <div class="card mb-3">
            <div class="card-header">Shipping</div>
            <div class="card-body">
                @if (order.ShippingSelections.Any())
                {
                    <ul class="list-unstyled mb-3">
                        @foreach (var selection in order.ShippingSelections)
                        {
                            <li>
                                <strong>@selection.SellerName</strong> &mdash; @selection.ShippingMethod
                                (<span class="text-muted">@selection.Cost.ToString("C")</span>)
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="mb-3 text-muted">Shipping method not available.</p>
                }

                <p class="mb-0"><strong>Estimated delivery:</strong> @Model.EstimatedDeliveryText</p>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card mb-3">
            <div class="card-header">Order summary</div>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <span>Placed</span>
                    <span>@order.CreatedAt.ToLocalTime().ToString("f")</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Payment</span>
                    <span>@order.PaymentMethod</span>
                </div>
                <div class="d-flex justify-content-between mt-2">
                    <span>Items subtotal</span>
                    <span>@order.ItemsSubtotal.ToString("C")</span>
                </div>
                @if (order.DiscountTotal > 0)
                {
                    <div class="d-flex justify-content-between text-success">
                        <span>Promo @(!string.IsNullOrWhiteSpace(order.PromoCode) ? $"({order.PromoCode})" : string.Empty)</span>
                        <span data-testid="promo-discount">-@order.DiscountTotal.ToString("C")</span>
                    </div>
                }
                <div class="d-flex justify-content-between">
                    <span>Shipping</span>
                    <span>@order.ShippingTotal.ToString("C")</span>
                </div>
                @if (order.RefundedAmount > 0)
                {
                    <div class="d-flex justify-content-between text-success">
                        <span>Refunded</span>
                        <span>@order.RefundedAmount.ToString("C")</span>
                    </div>
                }
                <div class="d-flex justify-content-between fw-bold mt-2">
                    <span>Total</span>
                    <span>@order.TotalAmount.ToString("C")</span>
                </div>
            </div>
            @if (Model.CanCancel)
            {
                <div class="card-footer bg-transparent">
                    <form method="post" asp-page-handler="Cancel">
                        <input type="hidden" name="orderId" value="@order.Id" />
                        <button type="submit" class="btn btn-outline-danger w-100">Cancel order</button>
                    </form>
                </div>
            }
        </div>

        <div class="card">
            <div class="card-header">Delivery address</div>
            <div class="card-body">
                <div>@order.DeliveryRecipientName</div>
                <div>@order.DeliveryLine1</div>
                @if (!string.IsNullOrWhiteSpace(order.DeliveryLine2))
                {
                    <div>@order.DeliveryLine2</div>
                }
                <div>@order.DeliveryPostalCode @order.DeliveryCity</div>
                <div>@order.DeliveryRegion, @order.DeliveryCountryCode</div>
                @if (!string.IsNullOrWhiteSpace(order.DeliveryPhoneNumber))
                {
                    <div class="mt-2">Phone: @order.DeliveryPhoneNumber</div>
                }
            </div>
        </div>
    </div>
</div>
