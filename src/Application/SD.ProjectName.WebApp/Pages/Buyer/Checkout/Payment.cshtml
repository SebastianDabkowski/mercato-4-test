@page "/buyer/checkout/payment"
@model SD.ProjectName.WebApp.Pages.Buyer.Checkout.PaymentModel
@{
    ViewData["Title"] = "Payment";
}

<h1 data-testid="payment-heading">Payment</h1>

@if (TempData["CheckoutError"] is string checkoutError)
{
    <div class="alert alert-warning">@checkoutError</div>
}
@if (TempData["ShippingSaved"] is string shippingSaved)
{
    <div class="alert alert-success">@shippingSaved</div>
}
@if (TempData["PaymentStatus"] is string paymentStatus)
{
    <div class="alert alert-success">@paymentStatus</div>
}
@if (TempData["PaymentError"] is string paymentError)
{
    <div class="alert alert-danger">@paymentError</div>
}

<div class="card mb-3">
    <div class="card-header">Order summary</div>
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <span>Items subtotal</span>
            <span>@Model.Totals.ItemsSubtotal.ToString("C")</span>
        </div>
        @if (Model.Totals.DiscountTotal > 0)
        {
            <div class="d-flex justify-content-between text-success">
                <span>Promo @(!string.IsNullOrWhiteSpace(Model.Totals.PromoCode) ? $"({Model.Totals.PromoCode})" : string.Empty)</span>
                <span data-testid="promo-discount">-@Model.Totals.DiscountTotal.ToString("C")</span>
            </div>
        }
        <div class="d-flex justify-content-between">
            <span>Shipping</span>
            <span>@Model.Totals.ShippingTotal.ToString("C")</span>
        </div>
        <div class="d-flex justify-content-between fw-bold mt-2">
            <span>Total</span>
            <span data-testid="payment-order-total">@Model.Totals.TotalAmount.ToString("C")</span>
        </div>
    </div>
 </div>

<div class="card mb-3" data-testid="promo-section">
    <div class="card-header">Promo code</div>
    <div class="card-body">
        @if (!string.IsNullOrWhiteSpace(Model.PromoError))
        {
            <div class="alert alert-danger py-2" data-testid="promo-error">@Model.PromoError</div>
        }
        @if (!string.IsNullOrWhiteSpace(Model.PromoSuccess))
        {
            <div class="alert alert-success py-2" data-testid="promo-success">@Model.PromoSuccess</div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Totals.PromoCode))
        {
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold" data-testid="applied-promo">Code: @Model.Totals.PromoCode</div>
                    <div class="text-muted small mb-0">Promo discount is applied to your order.</div>
                </div>
                <form method="post" asp-page-handler="ClearPromo" class="ms-3">
                    <button type="submit" class="btn btn-outline-secondary btn-sm" data-testid="promo-remove">Remove</button>
                </form>
            </div>
        }
        else
        {
            <form method="post" asp-page-handler="ApplyPromo" class="d-flex gap-2 align-items-start">
                <input type="text" name="promoCode" class="form-control" placeholder="Enter promo code" data-testid="promo-code-input" />
                <button type="submit" class="btn btn-outline-primary" data-testid="promo-apply">Apply</button>
            </form>
        }
    </div>
</div>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="card mb-3">
        <div class="card-header">Payment method</div>
        <div class="card-body">
            @foreach (var method in Model.AvailablePaymentMethods)
            {
                var methodId = $"payment-{method}";
                var isChecked = string.Equals(method, Model.SelectedPaymentMethod, StringComparison.OrdinalIgnoreCase);
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="SelectedPaymentMethod" value="@method" id="@methodId" @(isChecked ? "checked" : "") data-testid="payment-option" />
                    <label class="form-check-label" for="@methodId">@method</label>
                </div>
            }
            @if (string.Equals(Model.SelectedPaymentMethod, "BLIK", StringComparison.OrdinalIgnoreCase))
            {
                <div class="mt-3">
                    <label class="form-label" for="blik-code">BLIK code</label>
                    <input class="form-control" id="blik-code" name="BlikCode" value="@Model.BlikCode" maxlength="6" data-testid="blik-code-input" />
                    <span asp-validation-for="BlikCode" class="text-danger"></span>
                </div>
            }
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a class="btn btn-outline-secondary" asp-page="/Buyer/Checkout/Shipping">Back to shipping</a>
        <button type="submit" class="btn btn-primary" data-testid="payment-confirm">Confirm and pay</button>
    </div>
</form>
