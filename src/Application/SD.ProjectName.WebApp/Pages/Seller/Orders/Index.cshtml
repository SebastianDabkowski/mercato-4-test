@page "/seller/orders"
@model SD.ProjectName.WebApp.Pages.Seller.Orders.IndexModel
@using SD.ProjectName.Modules.Cart.Domain
@{
    ViewData["Title"] = "Seller orders";
}

<h1 class="mb-3">Orders</h1>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success">@Model.StatusMessage</div>
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <input type="hidden" name="Page" value="1" />
            <div class="col-12">
                <label class="form-label mb-2">Status</label>
                <div class="d-flex flex-wrap gap-3">
                    @foreach (var status in Model.StatusOptions)
                    {
                        var isChecked = Model.Statuses.Any(s => s.Equals(status, StringComparison.OrdinalIgnoreCase));
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="Statuses" value="@status" id="status-@status" @(isChecked ? "checked" : string.Empty) />
                            <label class="form-check-label text-capitalize" for="status-@status">@OrderStatusFlow.NormalizeStatus(status)</label>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-3">
                <label asp-for="CreatedFrom" class="form-label">From</label>
                <input asp-for="CreatedFrom" class="form-control" type="date" />
            </div>
            <div class="col-md-3">
                <label asp-for="CreatedTo" class="form-label">To</label>
                <input asp-for="CreatedTo" class="form-control" type="date" />
            </div>
            <div class="col-md-3">
                <label asp-for="BuyerId" class="form-label">Buyer</label>
                <input asp-for="BuyerId" class="form-control" placeholder="Buyer ID" />
                <div class="form-text">Show sub-orders for this buyer.</div>
            </div>
            <div class="col-auto d-flex gap-2 align-items-center">
                <button type="submit" class="btn btn-primary">Apply filters</button>
                <button type="submit" class="btn btn-outline-secondary" formmethod="get" formaction="@Url.Page("/Seller/Orders/Index", new { handler = "Export" })">Export CSV</button>
                <a class="btn btn-link" asp-page="/Seller/Orders/Index">Clear</a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Orders.Any())
{
    <div class="alert alert-info">You have no orders yet.</div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div class="text-muted">Showing @Model.TotalCount sub-order(s)</div>
        <div class="text-muted">Page @Model.Page of @Model.TotalPages</div>
    </div>
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Order</th>
                    <th>Buyer</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Shipping</th>
                    <th class="text-end">Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>
                            <div class="fw-semibold">#@order.OrderId</div>
                            <div class="text-muted small">Sub-order #@order.Id</div>
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(order.Order?.BuyerId))
                            {
                                <span class="badge bg-secondary">@order.Order?.BuyerId</span>
                            }
                            else
                            {
                                <span class="text-muted">Unknown</span>
                            }
                        </td>
                        <td>@order.Order?.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td class="text-capitalize">
                            @OrderStatusFlow.NormalizeStatus(order.Status)
                            @{
                                var latestReturn = order.ReturnRequests
                                    .OrderByDescending(r => r.RequestedAt)
                                    .FirstOrDefault();
                            }
                            @if (latestReturn is not null)
                            {
                                <div class="badge bg-warning text-dark mt-1">Return @latestReturn.Status</div>
                            }
                        </td>
                        <td>
                            @(order.ShippingSelection?.ShippingMethod ?? "Not selected")
                            <div class="text-muted small">@order.ShippingTotal.ToString("C")</div>
                            @if (!string.IsNullOrWhiteSpace(order.TrackingNumber))
                            {
                                <div class="small mt-1">Tracking: @order.TrackingNumber</div>
                            }
                        </td>
                        <td class="text-end">
                            @order.TotalAmount.ToString("C")
                            @if (order.RefundedAmount > 0)
                            {
                                <div class="text-success small">Refunded @order.RefundedAmount.ToString("C")</div>
                            }
                        </td>
                        <td>
                            <div class="d-flex flex-column gap-2">
                                <a class="btn btn-sm btn-outline-secondary" asp-page="/Seller/Orders/Details" asp-route-sellerOrderId="@order.Id">View</a>
                                @{
                                    var nextStatuses = OrderStatusFlow.NextStatuses(order.Status);
                                }
                                @if (nextStatuses.Any())
                                {
                                    <form method="post" asp-page-handler="UpdateStatus" class="d-flex flex-wrap gap-2 align-items-center">
                                        <input type="hidden" name="sellerOrderId" value="@order.Id" />
                                        <input type="hidden" name="Page" value="@Model.Page" />
                                        @foreach (var status in Model.Statuses)
                                        {
                                            <input type="hidden" name="Statuses" value="@status" />
                                        }
                                        @if (Model.CreatedFrom.HasValue)
                                        {
                                            <input type="hidden" name="CreatedFrom" value="@Model.CreatedFrom?.ToString("yyyy-MM-dd")" />
                                        }
                                        @if (Model.CreatedTo.HasValue)
                                        {
                                            <input type="hidden" name="CreatedTo" value="@Model.CreatedTo?.ToString("yyyy-MM-dd")" />
                                        }
                                        @if (!string.IsNullOrWhiteSpace(Model.BuyerId))
                                        {
                                            <input type="hidden" name="BuyerId" value="@Model.BuyerId" />
                                        }
                                        <select name="status" class="form-select form-select-sm w-auto">
                                            @foreach (var status in nextStatuses)
                                            {
                                                <option value="@status">@status</option>
                                            }
                                        </select>
                                        @if (nextStatuses.Contains(OrderStatus.Shipped))
                                        {
                                            <input type="text" name="trackingNumber" class="form-control form-control-sm" placeholder="Tracking (optional)" />
                                        }
                                        <button type="submit" class="btn btn-sm btn-primary">Update</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted small">No actions</span>
                                }
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="7" class="pb-3">
                            <div class="px-2">
                                <div class="fw-semibold mb-2">Items</div>
                                <ul class="list-unstyled mb-0">
                                    @foreach (var item in order.Items)
                                    {
                                        <li class="d-flex justify-content-between">
                                            <span class="d-flex align-items-center gap-2">
                                                <span>@item.ProductName</span>
                                                <span class="badge bg-secondary text-uppercase">@OrderStatusFlow.NormalizeStatus(item.Status)</span>
                                            </span>
                                            <span class="text-muted">@item.Quantity x @item.UnitPrice.ToString("C")</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Orders pagination">
            <ul class="pagination">
                <li class="page-item @(Model.HasPreviousPage ? string.Empty : "disabled")">
                    @if (Model.HasPreviousPage)
                    {
                        <a class="page-link" href="@Model.BuildPageUrl(Model.Page - 1)">Previous</a>
                    }
                    else
                    {
                        <span class="page-link">Previous</span>
                    }
                </li>
                <li class="page-item disabled">
                    <span class="page-link">Page @Model.Page of @Model.TotalPages</span>
                </li>
                <li class="page-item @(Model.HasNextPage ? string.Empty : "disabled")">
                    @if (Model.HasNextPage)
                    {
                        <a class="page-link" href="@Model.BuildPageUrl(Model.Page + 1)">Next</a>
                    }
                    else
                    {
                        <span class="page-link">Next</span>
                    }
                </li>
            </ul>
        </nav>
    }
}
