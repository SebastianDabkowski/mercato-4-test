@page "/seller/orders/{sellerOrderId:int}"
@model SD.ProjectName.WebApp.Pages.Seller.Orders.DetailsModel
@using SD.ProjectName.Modules.Cart.Domain
@{
    ViewData["Title"] = "Sub-order details";
    var subOrder = Model.SellerOrder!;
    var parentOrder = Model.ParentOrder;
    var itemStatuses = subOrder.Items.Select(i => OrderStatusFlow.NormalizeStatus(i.Status)).ToList();
    var isPartiallyShipped = itemStatuses.Any(s =>
            string.Equals(s, OrderStatus.Shipped, StringComparison.OrdinalIgnoreCase) ||
            string.Equals(s, OrderStatus.Delivered, StringComparison.OrdinalIgnoreCase)) &&
        itemStatuses.Any(s =>
            string.Equals(s, OrderStatus.Preparing, StringComparison.OrdinalIgnoreCase) ||
            string.Equals(s, OrderStatus.New, StringComparison.OrdinalIgnoreCase) ||
            string.Equals(s, OrderStatus.Paid, StringComparison.OrdinalIgnoreCase));
}

<h1 class="mb-2 d-flex align-items-center gap-3">
    <span>Sub-order #@subOrder.Id</span>
    <span class="badge bg-secondary text-uppercase">@OrderStatusFlow.NormalizeStatus(subOrder.Status)</span>
    @if (isPartiallyShipped)
    {
        <span class="badge bg-info text-dark text-uppercase">Partially shipped</span>
    }
</h1>
<div class="text-muted mb-4">
    <span>Parent order #@parentOrder?.Id</span>
    <span class="mx-2">â€¢</span>
    <span>Created @parentOrder?.CreatedAt.ToLocalTime().ToString("f")</span>
</div>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success">@Model.StatusMessage</div>
}
@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Line items</span>
                <span class="badge bg-light text-dark">@subOrder.Items.Count item(s)</span>
            </div>
            <div class="card-body p-0">
                <form method="post" asp-page-handler="UpdateItems">
                    <input type="hidden" name="sellerOrderId" value="@subOrder.Id" />
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 48px;"></th>
                                    <th>Product</th>
                                    <th class="text-end">Quantity</th>
                                    <th class="text-end">Unit price</th>
                                    <th class="text-end">Status</th>
                                    <th class="text-end">Line total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in subOrder.Items)
                                {
                                    var lineTotal = item.UnitPrice * item.Quantity;
                                    var normalizedStatus = OrderStatusFlow.NormalizeStatus(item.Status);
                                    var badgeClass = normalizedStatus.ToLowerInvariant() switch
                                    {
                                        "shipped" => "bg-info text-dark",
                                        "delivered" => "bg-success",
                                        "cancelled" => "bg-warning text-dark",
                                        _ => "bg-secondary"
                                    };
                                    var isSelectable = !string.Equals(normalizedStatus, OrderStatus.Cancelled, StringComparison.OrdinalIgnoreCase)
                                        && !string.Equals(normalizedStatus, OrderStatus.Delivered, StringComparison.OrdinalIgnoreCase)
                                        && !string.Equals(normalizedStatus, OrderStatus.Shipped, StringComparison.OrdinalIgnoreCase);
                                    <tr>
                                        <td>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="itemIds" value="@item.Id" id="item-@item.Id" @(isSelectable ? string.Empty : "disabled") />
                                            </div>
                                        </td>
                                        <td>
                                            <label class="mb-0" for="item-@item.Id">@item.ProductName</label>
                                        </td>
                                        <td class="text-end">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                        <td class="text-end">
                                            <span class="badge @badgeClass text-uppercase">@normalizedStatus</span>
                                        </td>
                                        <td class="text-end">@lineTotal.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex flex-wrap gap-2 align-items-center p-3 border-top">
                        <input type="text" name="trackingNumber" class="form-control form-control-sm" placeholder="Tracking number" />
                        <input type="text" name="trackingCarrier" class="form-control form-control-sm" placeholder="Carrier" />
                        <input type="text" name="trackingUrl" class="form-control form-control-sm" placeholder="Tracking URL (optional)" />
                        <button type="submit" name="actionType" value="ship" class="btn btn-sm btn-primary">Mark selected shipped</button>
                        <button type="submit" name="actionType" value="cancel" class="btn btn-sm btn-outline-danger">Cancel selected</button>
                    </div>
                </form>
                <div class="d-flex justify-content-end p-3 border-top">
                    <div style="min-width: 240px;">
                        <div class="d-flex justify-content-between">
                            <span>Items subtotal</span>
                            <span>@subOrder.ItemsSubtotal.ToString("C")</span>
                        </div>
                        @if (subOrder.DiscountTotal > 0)
                        {
                            <div class="d-flex justify-content-between text-success">
                                <span>Discount</span>
                                <span>-@subOrder.DiscountTotal.ToString("C")</span>
                            </div>
                        }
                        <div class="d-flex justify-content-between">
                            <span>Shipping</span>
                            <span>@subOrder.ShippingTotal.ToString("C")</span>
                        </div>
                        @if (subOrder.RefundedAmount > 0)
                        {
                            <div class="d-flex justify-content-between text-success">
                                <span>Refunded amount</span>
                                <span>@subOrder.RefundedAmount.ToString("C")</span>
                            </div>
                        }
                        <div class="d-flex justify-content-between fw-bold mt-2">
                            <span>Sub-order total</span>
                            <span>@subOrder.TotalAmount.ToString("C")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Activity</div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="d-flex justify-content-between">
                        <span>Created</span>
                        <span>@parentOrder?.CreatedAt.ToLocalTime().ToString("g")</span>
                    </li>
                    <li class="d-flex justify-content-between">
                        <span>Current status</span>
                        <span class="text-capitalize">@OrderStatusFlow.NormalizeStatus(subOrder.Status)</span>
                    </li>
                    @if (subOrder.ReturnRequests.Any())
                    {
                        var latestReturn = subOrder.ReturnRequests.OrderByDescending(r => r.RequestedAt).First();
                        <li class="d-flex justify-content-between">
                            <span>Return status</span>
                            <span class="text-warning text-capitalize">Return @latestReturn.Status</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card mb-3">
            <div class="card-header">Payment & status</div>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <span>Payment status</span>
                    <span class="fw-semibold">@Model.PaymentStatus</span>
                </div>
                <div class="d-flex justify-content-between mt-2">
                    <span>Payment method</span>
                    <span>@(parentOrder?.PaymentMethod ?? "Not specified")</span>
                </div>
                <div class="d-flex justify-content-between mt-2">
                    <span>Parent order</span>
                    <span>#@parentOrder?.Id</span>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">Refunds</div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Refundable balance</span>
                    <span class="fw-semibold">@Model.RefundableAmount.ToString("C")</span>
                </div>
                @if (Model.RefundableUntil.HasValue)
                {
                    <div class="text-muted small mb-3">Available until @Model.RefundableUntil.Value.ToLocalTime().ToString("d")</div>
                }
                else
                {
                    <div class="text-muted small mb-3">Refunds require delivered orders.</div>
                }
                @if (Model.CanRefund)
                {
                    <form method="post" asp-page-handler="Refund" class="d-flex flex-column gap-2">
                        <input type="hidden" name="sellerOrderId" value="@subOrder.Id" />
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">Amount</span>
                            <input type="number" name="refundAmount" step="0.01" min="0.01" max="@Model.RefundableAmount" class="form-control" value="@Model.RefundableAmount.ToString("0.00")" />
                        </div>
                        <input type="text" name="reason" class="form-control form-control-sm" placeholder="Reason (optional)" maxlength="200" />
                        <button type="submit" class="btn btn-sm btn-outline-primary">Process refund</button>
                    </form>
                }
                else
                {
                    <div class="alert alert-warning mb-0 py-2 small">
                        Refunds can be processed within 14 days of delivery when a balance remains.
                    </div>
                }
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">Shipping</div>
            <div class="card-body">
                <div class="mb-2">
                    <div class="text-muted small">Method</div>
                    <div>@(subOrder.ShippingSelection?.ShippingMethod ?? "Not selected")</div>
                    <div class="text-muted small">Cost @subOrder.ShippingTotal.ToString("C")</div>
                </div>
                @if (!string.IsNullOrWhiteSpace(subOrder.ShippingSelection?.DeliveryEstimate))
                {
                    <div class="mb-2">
                        <div class="text-muted small">Estimated delivery</div>
                        <div>@subOrder.ShippingSelection?.DeliveryEstimate</div>
                    </div>
                }
                else if (subOrder.ShippingSelection?.EstimatedDeliveryDate is { } eta)
                {
                    <div class="mb-2">
                        <div class="text-muted small">Estimated delivery</div>
                        <div>@eta.ToLocalTime().ToString("D")</div>
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(subOrder.TrackingNumber))
                {
                    var trackingUrl = !string.IsNullOrWhiteSpace(subOrder.TrackingUrl)
                        ? subOrder.TrackingUrl
                        : (Uri.TryCreate(subOrder.TrackingNumber, UriKind.Absolute, out var trackingUri) ? trackingUri.ToString() : null);
                    <div class="mb-2">
                        <div class="text-muted small">Tracking</div>
                        <div>
                            @subOrder.TrackingNumber
                            @if (!string.IsNullOrWhiteSpace(subOrder.TrackingCarrier))
                            {
                                <span class="text-muted ms-1">(@subOrder.TrackingCarrier)</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(trackingUrl))
                            {
                                <a class="ms-2" href="@trackingUrl" target="_blank" rel="noopener noreferrer">Open</a>
                            }
                        </div>
                    </div>
                }
                @if (!string.Equals(subOrder.Status, OrderStatus.Cancelled, StringComparison.OrdinalIgnoreCase) &&
                    !string.Equals(subOrder.Status, OrderStatus.Refunded, StringComparison.OrdinalIgnoreCase))
                {
                    <form method="post" asp-page-handler="UpdateTracking" class="d-flex flex-column gap-2 mt-3">
                        <input type="hidden" name="sellerOrderId" value="@subOrder.Id" />
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">Number</span>
                            <input type="text" name="trackingNumber" class="form-control" value="@subOrder.TrackingNumber" />
                        </div>
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">Carrier</span>
                            <input type="text" name="trackingCarrier" class="form-control" value="@subOrder.TrackingCarrier" />
                        </div>
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">URL</span>
                            <input type="text" name="trackingUrl" class="form-control" value="@subOrder.TrackingUrl" />
                        </div>
                        <button type="submit" class="btn btn-sm btn-outline-primary align-self-start">Save tracking</button>
                    </form>
                }
                <div class="mt-3">
                    <div class="text-muted small">Delivery address</div>
                    <div>@parentOrder?.DeliveryRecipientName</div>
                    <div>@parentOrder?.DeliveryLine1</div>
                    @if (!string.IsNullOrWhiteSpace(parentOrder?.DeliveryLine2))
                    {
                        <div>@parentOrder?.DeliveryLine2</div>
                    }
                    <div>@parentOrder?.DeliveryPostalCode @parentOrder?.DeliveryCity</div>
                    <div>@parentOrder?.DeliveryRegion, @parentOrder?.DeliveryCountryCode</div>
                    @if (!string.IsNullOrWhiteSpace(parentOrder?.DeliveryPhoneNumber))
                    {
                        <div class="mt-2">Phone: @parentOrder?.DeliveryPhoneNumber</div>
                    }
                </div>
                <div class="mt-3">
                    <div class="text-muted small">Delivery instructions</div>
                    <div class="text-muted">Not provided.</div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Buyer contact</div>
            <div class="card-body">
                <div class="mb-2">
                    <div class="text-muted small">Name</div>
                    <div>@Model.BuyerName</div>
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.BuyerEmail))
                {
                    <div class="mb-2">
                        <div class="text-muted small">Email</div>
                        <div>@Model.BuyerEmail</div>
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(Model.BuyerPhone))
                {
                    <div class="mb-2">
                        <div class="text-muted small">Phone</div>
                        <div>@Model.BuyerPhone</div>
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(parentOrder?.BuyerId))
                {
                    <div class="text-muted small">Buyer ID</div>
                    <div class="text-muted">@parentOrder?.BuyerId</div>
                }
            </div>
        </div>
    </div>
</div>
