@page "{id:int}"
@model SD.ProjectName.WebApp.Pages.Seller.Products.EditModel
@{
    ViewData["Title"] = "Edit product";
}

<h1 class="h3 mb-3" data-testid="edit-product-heading">Edit product</h1>
<p class="text-muted">Update product details. Changes are saved as draft until activated.</p>

<form method="post" class="mt-3" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger" data-testid="validation-summary"></div>

    <div class="mb-3">
        <label asp-for="Input.Title" class="form-label"></label>
        <input asp-for="Input.Title" class="form-control" data-testid="product-title" />
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Category" class="form-label"></label>
        @if (Model.CategoryOptions.Any())
        {
            <select asp-for="Input.Category" class="form-select" data-testid="product-category">
                <option value="">Select a category</option>
                @foreach (var option in Model.CategoryOptions)
                {
                    <option value="@option.Name">@option.DisplayName</option>
                }
            </select>
        }
        else
        {
            <input asp-for="Input.Category" class="form-control" data-testid="product-category" />
            <div class="form-text">Create a category as an admin to make it selectable.</div>
        }
        <span asp-validation-for="Input.Category" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Input.Price" class="form-label"></label>
                <input asp-for="Input.Price" class="form-control" data-testid="product-price" />
                <span asp-validation-for="Input.Price" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Input.Stock" class="form-label"></label>
                <input asp-for="Input.Stock" class="form-control" data-testid="product-stock" />
                <span asp-validation-for="Input.Stock" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label"></label>
        <textarea asp-for="Input.Description" class="form-control" rows="3" data-testid="product-description"></textarea>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Uploads" class="form-label"></label>
        <input asp-for="Input.Uploads" type="file" class="form-control" accept=".jpg,.jpeg,.png,.webp" multiple data-testid="product-image-upload" />
        <div class="form-text">Supported formats: JPG, PNG, WebP. Max 5 MB each. Choose the main image below.</div>
        <span asp-validation-for="Input.Uploads" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Input.ImageUrls" />

    <div class="mb-3">
        <label class="form-label">Images</label>
        @if (Model.ExistingImages.Any())
        {
            <div class="row row-cols-1 row-cols-md-3 g-2" data-testid="product-image-thumbs">
                @foreach (var image in Model.ExistingImages)
                {
                    <div class="col">
                        <div class="card h-100">
                            <img src="@image.ThumbnailUrl" alt="Product image" class="card-img-top" />
                            <div class="card-body py-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Input.MainImage" value="@image.LargeUrl" checked="@image.IsMain" data-testid="product-main-image" />
                                    <label class="form-check-label">Main image</label>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted mb-0" data-testid="product-images-empty">Add at least one image to activate the product.</p>
        }
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="mb-3">
                <label asp-for="Input.WeightKg" class="form-label"></label>
                <input asp-for="Input.WeightKg" class="form-control" data-testid="product-weight" />
                <span asp-validation-for="Input.WeightKg" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mb-3">
                <label asp-for="Input.LengthCm" class="form-label"></label>
                <input asp-for="Input.LengthCm" class="form-control" data-testid="product-length" />
                <span asp-validation-for="Input.LengthCm" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mb-3">
                <label asp-for="Input.WidthCm" class="form-label"></label>
                <input asp-for="Input.WidthCm" class="form-control" data-testid="product-width" />
                <span asp-validation-for="Input.WidthCm" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mb-3">
                <label asp-for="Input.HeightCm" class="form-label"></label>
                <input asp-for="Input.HeightCm" class="form-control" data-testid="product-height" />
                <span asp-validation-for="Input.HeightCm" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Input.ShippingMethods" class="form-label"></label>
        <textarea asp-for="Input.ShippingMethods" class="form-control" rows="2" data-testid="product-shipping"></textarea>
        <span asp-validation-for="Input.ShippingMethods" class="text-danger"></span>
    </div>

    <div class="form-check form-switch mb-3">
        <input asp-for="Input.Publish" class="form-check-input" role="switch" data-testid="product-publish" />
        <label asp-for="Input.Publish" class="form-check-label"></label>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary" data-testid="save-product">Save changes</button>
        <a class="btn btn-outline-secondary" asp-page="./Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
