@page "/seller/store"
@model SD.ProjectName.WebApp.Pages.Seller.StoreModel
@{
    ViewData["Title"] = "Store profile";
}

<h1 data-testid="store-settings-heading">Store profile</h1>
<p class="text-muted">Update the details buyers see on your public store page.</p>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-info" role="status" data-testid="store-status">
        @Model.StatusMessage
    </div>
}

<form method="post" enctype="multipart/form-data" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Store identity</h5>
            <div class="mb-3">
                <label asp-for="Input.StoreName" class="form-label"></label>
                <input asp-for="Input.StoreName" class="form-control" data-testid="store-name" />
                <span asp-validation-for="Input.StoreName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Description" class="form-label"></label>
                <textarea asp-for="Input.Description" class="form-control" rows="3" data-testid="store-description"></textarea>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Logo" class="form-label"></label>
                <input asp-for="Input.Logo" type="file" class="form-control" data-testid="store-logo" />
                <div class="form-text">PNG or JPG up to 1 MB.</div>
                <span asp-validation-for="Input.Logo" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.LogoUrl))
            {
                <div class="mb-3">
                    <p class="mb-1">Current logo:</p>
                    <img src="@Model.LogoUrl" alt="Current store logo" class="img-thumbnail" style="max-height: 140px;" data-testid="store-logo-preview" />
                </div>
            }
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Contact details</h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Input.ContactEmail" class="form-label"></label>
                        <input asp-for="Input.ContactEmail" class="form-control" data-testid="store-contact-email" />
                        <span asp-validation-for="Input.ContactEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Input.ContactPhone" class="form-label"></label>
                        <input asp-for="Input.ContactPhone" class="form-control" data-testid="store-contact-phone" />
                        <span asp-validation-for="Input.ContactPhone" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Input.WebsiteUrl" class="form-label"></label>
                <input asp-for="Input.WebsiteUrl" class="form-control" placeholder="https://example.com" data-testid="store-website" />
                <span asp-validation-for="Input.WebsiteUrl" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="d-flex align-items-center gap-2">
        <button type="submit" class="btn btn-primary" data-testid="store-save">Save profile</button>
        @if (!string.IsNullOrWhiteSpace(Model.PublicStoreUrl))
        {
            <a class="btn btn-outline-secondary" href="@Model.PublicStoreUrl" target="_blank" rel="noopener" data-testid="store-public-link">View public page</a>
        }
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
