@page
@using SD.ProjectName.Modules.Products.Application
@model SD.ProjectName.WebApp.Pages.Products.ListModel
@{
    ViewData["Title"] = Model.SelectedCategory?.Name is null ? "Products" : $"{Model.SelectedCategory.Name} products";
}

<div class="row">
    <aside class="col-lg-3 mb-3">
        <div class="card" data-testid="category-nav">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Categories</span>
                <a asp-page="/Products/List"
                   asp-route-sort="@Model.Sort"
                   asp-route-minPrice="@Model.MinPrice"
                   asp-route-maxPrice="@Model.MaxPrice"
                   asp-route-condition="@Model.Condition"
                   asp-route-sellerId="@Model.SellerId"
                   class="small @(Model.SelectedCategory is null ? "text-decoration-underline" : string.Empty)"
                   data-testid="category-clear">
                    All
                </a>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var category in Model.RootCategories)
                {
                    var isActive = Model.IsSelected(category.Name);
                    <a class="list-group-item list-group-item-action @(isActive ? "active" : string.Empty)"
                       asp-page="/Products/List"
                       asp-route-category="@category.Name"
                       asp-route-sort="@Model.Sort"
                       asp-route-minPrice="@Model.MinPrice"
                       asp-route-maxPrice="@Model.MaxPrice"
                       asp-route-condition="@Model.Condition"
                       asp-route-sellerId="@Model.SellerId"
                       data-testid="category-link">
                        @category.Name
                    </a>
                }
            </div>
        </div>

        @if (Model.ChildCategories.Any())
        {
            <div class="card mt-3" data-testid="subcategory-nav">
                <div class="card-header">Subcategories of @Model.SelectedCategory?.Name</div>
                <div class="list-group list-group-flush">
                    @foreach (var child in Model.ChildCategories)
                    {
                        var isActive = Model.IsSelected(child.Name);
                        <a class="list-group-item list-group-item-action @(isActive ? "active" : string.Empty)"
                           asp-page="/Products/List"
                           asp-route-category="@child.Name"
                           asp-route-sort="@Model.Sort"
                           asp-route-minPrice="@Model.MinPrice"
                           asp-route-maxPrice="@Model.MaxPrice"
                           asp-route-condition="@Model.Condition"
                           asp-route-sellerId="@Model.SellerId"
                           data-testid="subcategory-link">
                            @child.Name
                        </a>
                    }
                </div>
            </div>
        }
    </aside>

    <main class="col-lg-9">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <div>
                <h1 class="h4 mb-1" data-testid="category-heading">
                    @(Model.SelectedCategory?.Name ?? "All products")
                </h1>
                <p class="text-muted mb-0">Browse products by category. Select a category to filter the list.</p>
            </div>
            @if (Model.AggregatedFromSubcategories)
            {
                <span class="badge bg-light text-dark" data-testid="aggregate-badge">Including subcategories</span>
            }
        </div>

        <form method="get" class="mb-3" data-testid="filters-form">
            <div class="row g-2 align-items-end">
                <div class="col-sm-5 col-md-4">
                    <label asp-for="Sort" class="form-label">Sort by</label>
                    <select asp-for="Sort" class="form-select" data-testid="sort-select" onchange="this.form.submit()">
                        <option value="@ProductSort.Relevance">Relevance</option>
                        <option value="@ProductSort.PriceAsc">Price: Low to High</option>
                        <option value="@ProductSort.PriceDesc">Price: High to Low</option>
                        <option value="@ProductSort.Newest">Newest</option>
                    </select>
                </div>
            </div>
            <details class="card mt-3" data-testid="filter-panel" @(Model.HasActiveFilters ? "open" : string.Empty)>
                <summary class="card-header" data-testid="filter-panel-toggle">Filters</summary>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-sm-6 col-lg-4">
                            <label asp-for="Category" class="form-label">Category</label>
                            <input asp-for="Category" class="form-control" placeholder="e.g. Books" data-testid="category-filter" />
                        </div>
                        <div class="col-sm-6 col-lg-4">
                            <label class="form-label">Price range</label>
                            <div class="input-group">
                                <input asp-for="MinPrice" class="form-control" type="number" step="0.01" placeholder="Min" data-testid="filter-min-price" />
                                <input asp-for="MaxPrice" class="form-control" type="number" step="0.01" placeholder="Max" data-testid="filter-max-price" />
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-4">
                            <label asp-for="Condition" class="form-label">Condition</label>
                            <select asp-for="Condition" class="form-select" data-testid="filter-condition">
                                <option value="">All conditions</option>
                                @foreach (var condition in Model.ConditionOptions)
                                {
                                    <option value="@condition">@condition</option>
                                }
                            </select>
                        </div>
                        <div class="col-sm-6 col-lg-4">
                            <label asp-for="SellerId" class="form-label">Seller</label>
                            <select asp-for="SellerId" class="form-select" data-testid="filter-seller">
                                <option value="">All sellers</option>
                                @foreach (var seller in Model.SellerOptions)
                                {
                                    <option value="@seller">@seller</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="mt-3 d-flex flex-wrap gap-2">
                        <button type="submit" class="btn btn-outline-primary" data-testid="apply-filters">Apply filters</button>
                        @if (Model.HasActiveFilters)
                        {
                            <a asp-page="/Products/List"
                               asp-route-category="@Model.Category"
                               asp-route-sort="@Model.Sort"
                               class="btn btn-outline-secondary"
                               data-testid="clear-filters">
                                Clear filters
                            </a>
                        }
                    </div>
                </div>
            </details>
        </form>

        @if (Model.HasActiveFilters)
        {
            <div class="mb-3" data-testid="active-filters">
                <div class="text-muted small mb-1">Active filters:</div>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var filter in Model.ActiveFilters)
                    {
                        <span class="badge bg-secondary">@filter.Label: @filter.Value</span>
                    }
                </div>
            </div>
        }

        @if (Model.Products.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        var product = item.Product;
                        <tr data-testid="product-row">
                            <td>
                                @if (!string.IsNullOrWhiteSpace(item.ThumbnailUrl))
                                {
                                    <img src="@item.ThumbnailUrl" alt="@product.Name thumbnail" class="img-thumbnail" style="max-width: 80px;" data-testid="product-main-thumbnail" />
                                }
                                else
                                {
                                    <span class="text-muted small">No image</span>
                                }
                            </td>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Category</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.Stock</td>
                            <td>
                                <a asp-page="/Products/Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary" data-testid="product-detail-link">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info" data-testid="empty-category-state">
                <p class="mb-1">No products found@(Model.SelectedCategory is null ? string.Empty : $" in {Model.SelectedCategory.Name}").</p>
                @if (Model.HasActiveFilters)
                {
                    <p class="mb-2">Try adjusting or clearing the active filters to see more products.</p>
                    <div class="d-flex flex-wrap gap-2 mb-3" data-testid="empty-active-filters">
                        @foreach (var filter in Model.ActiveFilters)
                        {
                            <span class="badge bg-secondary">@filter.Label: @filter.Value</span>
                        }
                    </div>
                    <a asp-page="/Products/List"
                       asp-route-category="@Model.Category"
                       asp-route-sort="@Model.Sort"
                       class="btn btn-outline-secondary"
                       data-testid="reset-filters">
                        Reset filters
                    </a>
                }
                else
                {
                    <p class="mb-2">Try another category or search.</p>
                    @if (Model.SuggestedCategories.Any())
                    {
                        <div class="d-flex flex-wrap gap-2 mb-2" data-testid="category-suggestions">
                            @foreach (var suggestion in Model.SuggestedCategories)
                            {
                                <a asp-page="/Products/List"
                                   asp-route-category="@suggestion"
                                   asp-route-sort="@Model.Sort"
                                   asp-route-minPrice="@Model.MinPrice"
                                   asp-route-maxPrice="@Model.MaxPrice"
                                   asp-route-condition="@Model.Condition"
                                   asp-route-sellerId="@Model.SellerId"
                                   class="btn btn-sm btn-outline-secondary"
                                   data-testid="category-suggestion">
                                    @suggestion
                                </a>
                            }
                        </div>
                    }
                    <a asp-page="/Products/List"
                       asp-route-sort="@Model.Sort"
                       asp-route-minPrice="@Model.MinPrice"
                       asp-route-maxPrice="@Model.MaxPrice"
                       asp-route-condition="@Model.Condition"
                       asp-route-sellerId="@Model.SellerId"
                       class="btn btn-link p-0"
                       data-testid="clear-category">
                        View all products
                    </a>
                }
            </div>
        }
    </main>
</div>
