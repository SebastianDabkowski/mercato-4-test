@page
@model SD.ProjectName.WebApp.Areas.Identity.Pages.Account.ConfirmEmailModel
@{
    ViewData["Title"] = "Email confirmation";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <h1 class="mb-3">Email confirmation</h1>
        <div class="alert @(Model.CanResendVerification ? "alert-warning" : "alert-info")" role="status" data-testid="confirmation-status">
            @Model.StatusMessage
        </div>

        @if (Model.CanResendVerification)
        {
            <form method="post" asp-page-handler="Resend" class="mt-3">
                <input type="hidden" name="userId" value="@Model.UserId" />
                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                <p class="text-muted">Your verification link may have expired or been used already. Request a new one to finish verifying your email.</p>
                <button type="submit" class="btn btn-primary" data-testid="resend-verification-button">Send new verification email</button>
            </form>
        }
    </div>
</div>
