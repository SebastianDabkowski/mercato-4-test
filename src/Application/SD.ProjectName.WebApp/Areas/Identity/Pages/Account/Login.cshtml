@page
@model SD.ProjectName.WebApp.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Sign in";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="mb-3">Sign in</h1>
        <p class="text-muted">Use your email and password to access your buyer or seller dashboard.</p>
        <form id="loginForm" method="post" asp-route-returnUrl="@Model.ReturnUrl">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (Model.ShowEmailVerificationRequired)
            {
                <div class="alert alert-warning" role="alert" data-testid="seller-verification-alert">
                    <h4 class="alert-heading">Verify your seller email</h4>
                    <p>Your seller account must be verified before you can sign in. We sent a verification link to your email.</p>
                    <button class="btn btn-link p-0" asp-page-handler="ResendVerification" data-testid="resend-verification-link">Resend verification email</button>
                </div>
            }

            @if (Model.VerificationEmailResent)
            {
                <div class="alert alert-info" role="alert" data-testid="verification-resent-alert">
                    We sent a fresh verification link to @Model.Input.Email. Check your inbox and spam folder.
                </div>
            }

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" data-testid="login-email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" data-testid="login-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" data-testid="remember-me" />
                <label class="form-check-label" asp-for="Input.RememberMe"></label>
            </div>
            <button id="login-submit" type="submit" class="btn btn-primary w-100" data-testid="login-submit">Sign in</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
