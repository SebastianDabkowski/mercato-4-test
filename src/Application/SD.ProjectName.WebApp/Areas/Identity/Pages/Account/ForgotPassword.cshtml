@page
@model SD.ProjectName.WebApp.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Reset your password";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="mb-3">Reset your password</h1>
        <p class="text-muted">Enter the email you use to sign in. If we find a matching account, we'll send a single-use reset link that expires within 24 hours.</p>

        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" data-testid="forgot-email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100" data-testid="forgot-submit">Send reset link</button>
        </form>

        @if (Model.EmailSent)
        {
            <div class="alert alert-info mt-3" role="alert" data-testid="reset-link-message">
                If an account exists for @Model.Input.Email, we sent a password reset link. The link expires within 24 hours.
            </div>
        }

        <p class="mt-3 mb-0">
            <a asp-page="./Login" data-testid="back-to-login">Return to sign in</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
