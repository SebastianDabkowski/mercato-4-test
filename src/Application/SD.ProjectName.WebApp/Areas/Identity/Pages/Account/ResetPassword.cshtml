@page
@model SD.ProjectName.WebApp.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Choose a new password";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="mb-3">Set a new password</h1>
        <p class="text-muted">Reset links are single-use and expire within 24 hours for your security.</p>

        @if (Model.ShowInvalidLink)
        {
            <div class="alert alert-danger" role="alert" data-testid="invalid-reset-link">
                This password reset link is invalid or has expired.
                <a asp-page="./ForgotPassword" class="alert-link" data-testid="request-new-link">Request a new link</a>.
            </div>
        }

        @if (Model.PasswordReset)
        {
            <div class="alert alert-success" role="alert" data-testid="reset-success">
                Your password has been updated. Sign in with your new password.
            </div>
        }

        @if (!Model.PasswordReset && !Model.ShowInvalidLink)
        {
            <form method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Input.UserId" type="hidden" />
                <input asp-for="Input.Code" type="hidden" />

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" data-testid="reset-password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" data-testid="reset-confirm-password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100" data-testid="reset-submit">Update password</button>
            </form>
        }

        <p class="mt-3 mb-0">
            <a asp-page="./Login">Return to sign in</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
