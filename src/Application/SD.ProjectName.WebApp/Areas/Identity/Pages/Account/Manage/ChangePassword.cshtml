@page
@model SD.ProjectName.WebApp.Areas.Identity.Pages.Account.Manage.ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="mb-3">Change your password</h1>
        <p class="text-muted">Update your password regularly to keep your account secure.</p>

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-success" role="alert" data-testid="change-password-success">
                @Model.StatusMessage
            </div>
        }

        <form id="change-password-form" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Input.OldPassword" class="form-label"></label>
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" data-testid="current-password" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" data-testid="new-password" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" data-testid="confirm-new-password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100" data-testid="change-password-submit">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
